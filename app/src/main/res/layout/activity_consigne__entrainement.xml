<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Consigne_Entrainement">

    <TextView
        android:id="@+id/textView_exeplication_entrainement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tout_d_abord_l_entrainement_n_le_but_est_de_r_aliser_quelques_s_ries_rapides_qui_ne_seront_pas_prises_en_compte_pour_vour_familiariser_avec_l_exp_rience_et_avec_l_interface"
        android:textAlignment="center"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25" />

    <Button
        android:id="@+id/button_commencer_entrainement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/commencer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.83" />
</androidx.constraintlayout.widget.ConstraintLayout>